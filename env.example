# CourseHub environment variables (example)
# Copy to .env.local and fill with your credentials for local development.

# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-supabase-url.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-public-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_DATABASE_URL=postgresql://your-supabase-pooler-url

# Mongodb 
MONGO_URI= https://your-mongodb-url

# Gemini Studio (AI)
GEMINI_API_KEY=your-gemini-api-key

# Notification service (SendGrid or similar)
SENDGRID_API_KEY=your-sendgrid-api-key
NOTIFICATION_FROM_EMAIL=no-reply@example.com

# Gmail (App password or OAuth2 credentials)
GMAIL_USER=your-gmail-address
GMAIL_PASS=your-app-password

# App URL (Optional - defaults to request host)
# NEXT_PUBLIC_APP_URL=http://localhost:3000
GMAIL_USER=your@gmail.com
GMAIL_PASS=your-app-password-or-oauth-refresh-token
GMAIL_CLIENT_ID=optional
GMAIL_CLIENT_SECRET=optional
GMAIL_REFRESH_TOKEN=optional

# Payment gateway (Stripe/Chapa)
PAYMENT_PROVIDER=stripe
STRIPE_SECRET_KEY=your-stripe-secret-key

# App settings
NEXT_PUBLIC_APP_NAME=CourseHub
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Optional: Vercel / deployment
VERCEL_ENV=development
