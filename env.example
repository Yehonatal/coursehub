# CourseHub environment variables (example)
# Copy to .env.local and fill with your credentials for local development.

# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-supabase-url.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-public-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_DATABASE_URL=postgresql://your-supabase-pooler-url

# Mongodb 
MONGO_URI= https://your-mongodb-url

# Gemini Studio (AI)
GEMINI_API_KEY=your-gemini-api-key

# Notification service (SendGrid or similar)
SENDGRID_API_KEY=your-sendgrid-api-key
NOTIFICATION_FROM_EMAIL=no-reply@example.com

# Payment gateway (Stripe/Chapa)
PAYMENT_PROVIDER=stripe
STRIPE_SECRET_KEY=your-stripe-secret-key

# App settings
NEXT_PUBLIC_APP_NAME=CourseHub
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Optional: Vercel / deployment
VERCEL_ENV=development
